{
  "name": "react-workspace",
  "version": "0.0.0",
  "description": "Project with the basic configuration of React and webpack.",
  "main": "webpack.config.js",
  "dependencies": {
    /*
     * Babel: It is a tool for transpiling React code which is JSX 
     * (https://goo.gl/ynEJBY) and ES6 code.
     */
    "babel-loader": "^6.2.0",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "webpack": "^1.12.9",
    /*
     * The webpack-dev-server is a little node.js Express server, 
     * which uses the webpack-dev-middleware to serve a webpack bundle.
     */
    "webpack-dev-server": "^1.14.1"
  },
  "devDependencies": {},
  "scripts": {
    /*
     * We have to give a content source folder to the webpack-dev-server command. 
     * In this case we use the src folder. If you want to hide the top bar which
     * tells you the state of the react modules loader just add: --inline --hot
     * to the dev command.
     */
    "dev": "./node_modules/.bin/webpack-dev-server --content-base src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "svillafe",
  "license": "MIT"
}